{
  "name": "build-python",
  "version": "0.13.1",
  "description": "Atom Build provider for python/python3/py, runs Python",
  "repository": "https://github.com/idleberg/atom-build-python",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && rollup --config",
    "clean": "rimraf ./lib",
    "dev": "npm run start",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:js": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "start": "rollup --watch --config",
    "test": "npm run lint"
  },
  "keywords": [
    "buildprovider",
    "compile",
    "python",
    "python3",
    "linter",
    "lint"
  ],
  "main": "lib/provider.js",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "activationHooks": [
    "core:loaded-shell-environment"
  ],
  "providedServices": {
    "builder": {
      "description": "Runs PowerShell scripts",
      "versions": {
        "2.0.0": "provideBuilder"
      }
    }
  },
  "package-deps": [
    [
      {
        "name": "buildium"
      },
      {
        "name": "build"
      }
    ]
  ],
  "dependencies": {
    "@atxm/developer-console": "^0.5.0",
    "atom-package-deps": "^7.2.2",
    "atom-satisfy-dependencies": "^0.3.0",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/eslint-parser": "^7.13.10",
    "@babel/plugin-proposal-optional-chaining": "^7.13.8",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "eslint": "^7.2.2",
    "eslint-plugin-json": "^2.1.2",
    "husky": ">=4 <5",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "remark-cli": "^9.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.42.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
